<%- include("header") %>
    <div id="heading" class="box"><h1><%= listTitle %> TODO List</h1></div>

    <div class="box">
        <% for (item of items) { %>
        <div class="item">
            <input type="checkbox" />
            <p><%= item %></p>
        </div>
        <% } %>

        <form action="/" method="post">
            <input
                type="text"
                name="newItem"
                placeholder="New Item"
                autocomplete="off"
            />
            <button type="submit" name="list" value="<%= listTitle %>"
                >+
            </button>
        </form>
    </div>
<%- include("footer") %>