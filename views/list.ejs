<%- include("header") %>
    <div id="heading" class="box"><h1><%= listTitle %></h1></div>

    <div class="box">

        <% for (item of items) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="toDelete" value="<%= item._id %>" onchange="this.form.submit()" />
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>" />
            </form>
        <% } %>

        <form action="/" method="post" class="item">
            <input
                type="text"
                name="newItem"
                placeholder="New Item"
                autocomplete="off"
            />
            <button type="submit" name="listName" value="<%= listTitle %>"
                >+
            </button>
        </form>

    </div>
<%- include("footer") %>